<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/standard_padding_small"
    android:orientation="horizontal"
    android:background="@color/lightGray"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="toCourseDetails">

    <ImageView android:id="@+id/item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_action_book"/>

    <TextView android:id="@+id/item_name"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/standard_padding_small"
        android:layout_marginTop="@dimen/standard_padding_small"
        android:layout_marginBottom="@dimen/standard_padding_small"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/item_coeff"
        android:layout_margin="@dimen/standard_padding_small"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>